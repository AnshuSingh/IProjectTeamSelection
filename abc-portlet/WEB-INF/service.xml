<service-builder package-path="com.test.slayer">
	<author>anshu</author>
	<namespace>LMS</namespace>
	<entity name="LMSBook" local-service="true" remote-service="false">
		<!-- PK fields -->
		<column name="bookId" type="long" primary="true"></column>
		<!-- UI fields -->
		<column name="asuid" type="String"></column>
		<column name="email" type="String"></column>
